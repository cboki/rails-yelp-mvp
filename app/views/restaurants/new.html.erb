<div class="container">
  <h1>Add a new restaurant</h1>
  <%= simple_form_for @restaurant do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :phone_number %>
    <%= f.select :category, ["chinese", "italian", "japanese", "french", "belgian"] %>
    <%= f.submit "add a restaurant" %>
  <% end %>
  <%= link_to 'Go back to the list', restaurants_path %>
</div>
